<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/row_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:tint="@color/colorInstagramBlue"
        android:src="@drawable/avatar_sm" />

    <LinearLayout
        android:id="@+id/row_content_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/row_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:scrollHorizontally="false"/>
        <TextView
            android:id="@+id/row_sub_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorInstagramBlue"
            android:textSize="14sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/row_img_status"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:tint="@color/colorIInstagramRedOrange"
            android:src="@drawable/avatar_sm"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/download_progressbar"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:progressBackgroundTint="@color/colornstagramYellow"
            android:progressTint="@color/colorIInstagramRedOrange"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>
