<?xml version="1.0" encoding="utf-8"?><!-- item_feed.xml -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_gravity="center"
android:paddingBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/ivPostUserProfilePhoto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/avatar_sm" />

            <TextView
                android:id="@+id/tvUploadUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/ivPostUserProfilePhoto"
                android:text="Yen Nguyen"
                android:textSize="@dimen/text_size16sp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUploadUser"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/ivPostUserProfilePhoto"
                android:text="Mui Ne Sand Dune"

                android:textSize="@dimen/text_size12sp" />

            <TextView
                android:id="@+id/tvUploadTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/text_size14sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivFeedCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topLayout"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/muine_sand_dune_640x640" />

        <ImageView
            android:id="@+id/ivPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_play"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivFeedCenter"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivLikeIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_heart_red" />

            <TextView
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivLikeIcon"
                android:text="12 likes"
                android:textColor="@color/colorInstagramBlue"
                android:textSize="@dimen/text_size12sp" />

            <TextView
                android:id="@+id/tvCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivLikeIcon"
                android:layout_toRightOf="@id/tvLikeCount"
                android:paddingLeft="5dp"
                android:text="View 10 comments"
                android:textColor="@color/colorInstagramBlue"
                android:textSize="@dimen/text_size12sp" />

            <ImageView
                android:id="@+id/ivShareIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/colorInstagramBlue"
                android:src="@drawable/ic_share" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>